REPORT ZPRATIK1.

DATA: i TYPE i,
      j TYPE i.

i = 0.

* #lk döngü - Tüm say#lar (çift/tek)
WHILE i < 101.
  IF i MOD 2 = 0.
    WRITE: / 'Ç#FT SAYI=', i.
  ELSE.
    WRITE: / 'TEK SAYI=', i.
  ENDIF.
  i = i + 1.
ENDWHILE.

* #kinci döngü - Sadece çift say#lar
j = 1.
WRITE: / '--- 2 ye tam bölünenler: ---'.

WHILE j < 101.
  IF j MOD 2 = 0.
    WRITE: / j.
  ENDIF.
  j = j + 1.
ENDWHILE.
