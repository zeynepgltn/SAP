REPORT z_screen.

START-OF-SELECTION.
  CALL SCREEN 0100.

MODULE status_0100 OUTPUT.
  SET PF-STATUS 'STATUS_0100'.
  SET TITLEBAR 'TITLE_0100'.
ENDMODULE.

MODULE user_command_0100 INPUT.
  DATA: lv_text TYPE char200.

  CONCATENATE sy-ucomm
              'butonuna bas#lm##t#r'
              INTO lv_text
              SEPARATED BY space.

  MESSAGE lv_text TYPE 'I'.

  CASE sy-ucomm.
    WHEN '&BCK'.
      LEAVE TO SCREEN 0.
  ENDCASE.
ENDMODULE.
